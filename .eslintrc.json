{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "standard",
        "plugin:node/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "settings": {
        "node": {
            "tryExtensions": [
                ".js",
                ".json",
                ".node"
            ]
        }
    },
    "rules": {
        "node/file-extension-in-import": "error"
    }
}